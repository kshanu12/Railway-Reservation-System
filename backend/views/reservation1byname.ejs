        <div style="margin:auto; margin-top: 130px;height:18vh;width:80%;background-color: #d6d3d3; border-radius: 20px;text-align: center;">
            <form action="/reservation1byname" method="post">
                <div style="display: flex; text-align: center; justify-content: center;padding-top: 52px;">
                    <div style="display: flex;">
                        <h4>Search Train</h4>
                        <select style="border-radius: 5px;margin-left: 20px;" class="te" name="gender" id="stn" onchange="location = this.value;">
                            <option value="/reservation1">By Station</option>
                            <option value="/reservation1byno">By Number</option>
                            <option value="/reservation1byname" selected>By Name</option>
                        </select>
                    </div>
                    <div style="display: flex;margin-left: 20px;">
                        <h4>Train Name</h4>
                        <input style="margin-left: 20px; border-radius: 5px;" type="text" name="t_name">
                    </div>
                    <button  type="submit" style=" margin-top:2px;margin-left: 20px;width:130px;height:30px;border-radius: 5px;background-color: white;color:green;border-width: 2px;border-color: green;">Search</button>
                </div>
            </form>
        </div>
        <div style="margin:auto; margin-top: 10px;height:100vh;width:80%;background-color: #d6d3d3; border-radius: 20px;text-align: center;">
            <h1 style="padding-top: 30px;padding-bottom: 30px;">Train available</h1>
            <nav style="height:60px;background-color: rgb(14, 13, 13);width:98%;margin:auto;border-radius: 5px;font-size:larger;">
                <ul class="row" style="list-style-type: none;display:flex;justify-content: space-between;color: white;">
                    <li class="col-1">Train number</li>
                    <li class="col-1">Train name</li>
                    <li class="col-1">Source Station</li>
                    <li class="col-1">Destination Station</li>
                    <li class="col-1">Arrival Time</li>
                    <li class="col-1">Departure Time</li>
                    <li class="col-1">Seats available</li>
                    <li class="col-1">Cost</li>
                    <li class="col-1">&nbsp</li>
                </ul>
                <ul>
                    <span style="color: red"><%=message%></span> 
                </ul>
                <% project.forEach((ele)=>{%>
                    <ul class="row" style="list-style-type: none; display:flex;justify-content: space-around;">
                        <li class="col-1"><%=ele.t_no%></li> 
                        <li class="col-1"><%=ele.t_name%></li> 
                        <li class="col-1"><%=ele.fromstn%></li> 
                        <li class="col-1"><%=ele.tostn%></li> 
                        <li class="col-1"><%=ele.arrival%></li> 
                        <li class="col-1"><%=ele.departure%></li> 
                        <li class="col-1"><%=ele.seat_avail%></li>
                        <li class="col-1"><%=ele.cost%></li>
                        <li class="col-1">
                            <form action="/book/<%=ele.t_no%>" method="post">
                                <button type="submit" style="border-radius: 5px;" id="book"> Book </button>
                            </form>
                        </li>
                    </ul>
                <%});%>
            </nav>
        </div>

